<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频播放" />

        <Button
            android:id="@+id/image_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="图片播放" />

        <Button
            android:id="@+id/download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="下载" />

        <Button
            android:id="@+id/net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络" />

        <Button
            android:id="@+id/start_broadcast_receive_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启广播接收服务" />

        <Button
            android:id="@+id/send_broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送广播" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/media_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MediaPlayer" />

        <Button
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="代码实验" />

        <Button
            android:id="@+id/start_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragment" />

        <Button
            android:id="@+id/service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="service" />

        <Button
            android:id="@+id/read_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取联系人" />

        <Button
            android:id="@+id/content_provider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容提供" />

    </LinearLayout>




</LinearLayout>